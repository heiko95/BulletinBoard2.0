{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "SyncSettings": {
    "FileName": "",
    "Arguments": "",
    "KillAfterTimeout": true,
    "Timeout": 10000,
    "Hidden": false
  },

  "SlideSettings": {
    "WelcomeInterval": 3000,
    "ImageInterval": 0,
    "BibleTextInterval": 3000,
    "PlannerInterval": 3000
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "ElementSettings": {
    "WelcomeScreenSettings": {
      "FolderName": "WelcomeImage",
      "FileName": "WelcomeImage.jpg"
    },

    "EventScreenSettings": {
      "FolderName": "Planner",
      "FileName": "BulletinBoard.csv",
      "DisplayCount": 12
    },

    "ImageScreenSettings": {
      "FolderName": "Images",
      "DisplayCount": 3
    },

    "BibleSettings": {
      "FolderName": "Bible",
      "FileName": "Luther2017.csv"
    }
  }
}