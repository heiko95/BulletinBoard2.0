@using hgSoftware.DomainServices.Models


<div class="background-image-planner">
    <div class="background-right">
        <div class="card-container"> 
            <div class ="card plannercard">
                <table class="planner-table">
                        @{
                         PlannerSection last=PlannerElement.PlannerSections.Last();
                         foreach(var PlannerSection in PlannerElement.PlannerSections)
                         {
                             if (PlannerSection.Equals(last))
                             {
                                 <tr>
                                     <th colspan="4" class="planner-month planner-month--last">@PlannerSection.Month</th>
                                 </tr>
                             }
                                 else
                                 {
                                     <tr>
                                         <th colspan="4" class="planner-month">@PlannerSection.Month</th>
                                     </tr>
                                 }
                                 @foreach (var eventElement in PlannerSection.Events)
                                 {
                                     <tr class="planner-tr">
                                        <td class="planner-td planner-day">@eventElement.Day</td>
                                        <td class="planner-td planner-date">@eventElement.Date</td>
                                        <td class="planner-td planner-time">@eventElement.DateTime.ToString("HH:mm")</td>
                                        <td class="planner-td planner-description">@eventElement.Description</td>
                                        <td class="planner-td planner-bibleverse">@eventElement.BibleText</td>
                                        <td class="planner-td planner-location">@eventElement.Location</td>
                                     </tr>
                                 }
                         }
                         }    
                </table>
            </div>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public PlannerElement PlannerElement { get; set; } = new PlannerElement();

    [Parameter]
    public string Direction { get; set; } = string.Empty;

}




 