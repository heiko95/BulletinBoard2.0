@using hgSoftware.DomainServices.Models

<div class="background-image-imagecard">
    <div class="@($"background-{Direction}")">
        <div class="card-container">
            <div class="card image-card">
                <img class="image" src=@ImageElement.Base64Image alt=@ImageElement.Name/>
                <div>
                    <p class="image-sub">
                        @ImageElement.Date - @ImageElement.Name 
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>





@code {
    [Parameter]
    public ImageElement ImageElement { get; set; } = new ImageElement();

    [Parameter]
    public string Direction { get; set; } = string.Empty;

}
