@using hgSoftware.DomainServices.Models
<body>
    <section class="planner">
        <div class="planner__container">
            <ul class="planner__list">
                <li class="planner__list-item">
                    <p class="month planner__list-item-list">@PlannerSection.Month</p>
                </li>
                @foreach(var eventElement in PlannerSection.Events)
                {
                 <li class="planner__list-item">
                    <p class="day planner__list-item-list">@eventElement.Day</p>
                    <p class="date planner__list-item-list">@eventElement.Date</p>
                    <p class="time planner__list-item-list">@eventElement.DateTime.ToString("HH:mm")</p>
                    <p class="description planner__list-item-list">@eventElement.Description</p>
                    <p class="bibleverse planner__list-item-list">@eventElement.BibleText</p>
                    <p class="location planner__list-item-list">@eventElement.Location</p>
                </li>
                }
            </ul>
        </div>
    </section>

</body>


@code{
    [Parameter]
    public PlannerSection PlannerSection { get; set; } = new PlannerSection();

    [Parameter]
    public string Direction { get; set; } = string.Empty;

}